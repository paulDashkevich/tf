---
- name: NGINX | Install and configure NGINX
  hosts: all 
  become: true
  become_user: adminroot
  vars:
   nginx_listen_port: 80
  
  tasks:
  - name: NGINX | Install EPEL Repo package from standart repo
    yum:
        name: epel-release
        state: present
    tags:
        - epel-package
        - packages

  - name: NGINX | Install NGINX package from EPEL Repo
    yum:
        name: nginx
        state: latest
    notify:
        - restart nginx
    tags:
        - nginx-package
        - packages

  handlers:
    - name: restart nginx
      systemd:
        name: nginx
        state: restarted
        enabled: yes
    
    - name: reload nginx
      systemd:
        name: nginx
        state: reloaded

    - name: start service
      systemd:
        name: nginx
        state: started
